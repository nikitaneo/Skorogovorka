<Page
    x:Class="Skorogovorka.SelectPatter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Skorogovorka"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:ConnectionId='1' Name="pattersList"                                   SelectionMode="None" IsItemClickEnabled="True" Margin="0,71,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="290"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding patter}" Grid.Column="0" HorizontalAlignment="Left" />
                        <TextBlock Text="{Binding confidence}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Items>
            </ListView.Items>
        </ListView>
        <Image x:ConnectionId='2' x:Name="image" HorizontalAlignment="Left" Height="68" VerticalAlignment="Top" Width="70" Source="Assets/disclose-arrow.png" RenderTransformOrigin="0.5,0.5"                      >
            <Image.RenderTransform>
                <CompositeTransform Rotation="-180"/>
            </Image.RenderTransform>
        </Image>
        <TextBlock x:ConnectionId='3' x:Name="textBlock" HorizontalAlignment="Center" Padding="0, 0, 0, 0" Margin="70,2,0,0" TextWrapping="Wrap" Text="Выберите:" VerticalAlignment="Top" Height="66" Width="284" FontSize="40" TextAlignment="Left"/>
    </Grid>
</Page>

